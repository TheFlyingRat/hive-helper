<!DOCTYPE html>
<html lang="en">
<head>
    <meta name="description" content="Manage your tasks inside HiveHelper's calendar">
    <%- include('../partials/head') %>
    <link rel="stylesheet" href="/stylesheets/schedule.css">
</head>
<body>
    <%- include('../partials/navbar') %>

    <main>
        <h1>Schedule</h1>
        <button id="openModalBtn">Add Task</button>

        <div id="calendar" class="calendar"></div>

        <!-- Modal for creating a new task -->
        <div id="taskModal" class="modal">
            <div class="modal-content">
                <span class="close">&times;</span>
                <h2>Create a new task</h2>
                <form id="createTaskForm">
                    <label for="hive_id">Hive ID:</label>
                    <input type="text" id="hive_id" name="hive_id" required><br>
                    <label for="task_description">Task Description:</label>
                    <input type="text" id="task_description" name="task_description" required><br>
                    <label for="due_date">Due Date:</label>
                    <input type="datetime-local" id="due_date" name="due_date" required><br>
                    <button type="submit">Create Task</button>
                </form>
            </div>
        </div>


        <script src="/scripts/schedule.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/fullcalendar@6.1.14/index.global.min.js"></script>
    </main>
</body>
</html>
